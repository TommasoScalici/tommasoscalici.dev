---
import { projects } from "../../data/projects";
import { ProjectCard } from "../ProjectCard";
import { ui, defaultLang } from "../../i18n/ui";

interface Props {
    lang?: string;
}

const { lang = defaultLang } = Astro.props;
const t = ui[lang as keyof typeof ui] || ui[defaultLang];
---

<section id="projects" class="py-32 px-6 bg-black/50">
    <div class="max-w-7xl mx-auto">
        <div class="flex items-end justify-between mb-16">
            <div>
                <h2 class="text-4xl md:text-5xl font-bold font-mono mb-4">
                    <span class="text-primary">01.</span>
                    {t["section.projects.title"]}
                </h2>
                <p class="text-gray-400">
                    {t["section.projects.subtitle"]}
                </p>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {
                projects.map((project) => (
                    <ProjectCard client:visible project={project} />
                ))
            }
        </div>
    </div>
</section>
