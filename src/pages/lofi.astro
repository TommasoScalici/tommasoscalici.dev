---
import SpotifyLandingLayout from "../layouts/SpotifyLandingLayout.astro";
import { SpotifyDeepLinkButton } from "../components/SpotifyDeepLinkButton";

const title = "Coding Lofi | Focus Music for Devs";
const description =
    "Focus music designed for Developers. Python, JS, C++ & Deep Work.";
const coverImage = "/images/lofi-cover.webp";
const playlistId = "0yF9pJ62XkAgxDGMlbyenf";
---

<SpotifyLandingLayout
    title={title}
    description={description}
    coverImage={coverImage}
    theme="lofi"
>
    <style>
        /* Typography */
        h1 {
            font-size: 22px;
            font-weight: 700;
            margin-bottom: 8px;
            letter-spacing: -0.5px;
        }
        .subtitle {
            color: #8b949e;
            font-size: 14px;
            margin-bottom: 30px;
            line-height: 1.5;
        }
        .highlight {
            color: #58a6ff;
            font-weight: 600;
        } /* GitHub Blue */
    </style>

    <h1>Coding Lofi â˜•</h1>
    <p class="subtitle">
        Focus music curated for Developers.<br />
        <span class="highlight">Python</span>, <span class="highlight">JS</span
        >, <span class="highlight">C++</span> & <span class="highlight"
            >Deep Work</span
        >.
    </p>

    <SpotifyDeepLinkButton
        client:load
        playlistId={playlistId}
        eventName="Coding Lofi"
    />
</SpotifyLandingLayout>
