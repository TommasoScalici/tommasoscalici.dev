---
import Layout from "../../layouts/Layout.astro";
import { ProjectCard } from "../../components/ProjectCard";
import { MusicReleaseCard } from "../../components/MusicReleaseCard";
import { projects } from "../../data/projects";
import { musicReleases } from "../../data/music";
import { playlistsData } from "../../data/playlists";
import { bioData } from "../../data/bio";
import { PlaylistCard } from "../../components/PlaylistCard";
import { ui, defaultLang } from "../../i18n/ui";

const lang = "it";
const bio = bioData[lang];
const t = ui[lang as keyof typeof ui] || ui[defaultLang];
const playlists = playlistsData[lang];
---

<Layout
    title="Tommaso Scalici | Software Engineer & Musicista"
    description={bio.description}
    lang={lang}
>
    <!-- Hero Section -->
    <section class="min-h-screen flex flex-col relative">
        <div class="flex-grow flex flex-col justify-center px-6 pt-16">
            <div class="max-w-7xl mx-auto w-full">
                <div
                    class="grid grid-cols-1 md:grid-cols-[3fr_2fr] gap-8 lg:gap-12 items-center"
                >
                    {/* Text Content */}
                    <div class="max-w-4xl">
                        <h1
                            class="font-mono text-4xl md:text-5xl lg:text-7xl font-bold tracking-tighter mb-8 leading-none"
                        >
                            <span
                                class="text-transparent bg-clip-text bg-gradient-to-r from-white via-primary to-blue-400 animate-pulse block pb-2"
                            >
                                {bio.heroTitle}
                            </span>
                            <span
                                class="text-transparent bg-clip-text bg-gradient-to-r from-white via-secondary to-purple-500 animate-pulse block pb-2"
                            >
                                {bio.heroSubtitle}
                            </span>
                        </h1>

                        <p
                            class="text-xl md:text-2xl text-gray-400 max-w-2xl leading-relaxed mb-10 border-l-2 border-primary/50 pl-6"
                        >
                            {bio.description}
                        </p>

                        <div class="flex flex-wrap gap-4">
                            <a
                                href="#projects"
                                class="px-8 py-3 border border-primary text-primary font-bold rounded-full hover:bg-primary/10 hover:shadow-[0_0_20px_rgba(0,243,255,0.3)] transition-all duration-300"
                            >
                                Vedi Progetti
                            </a>
                            <a
                                href="#music"
                                class="px-8 py-3 border border-secondary text-secondary font-bold rounded-full hover:bg-secondary/10 hover:shadow-[0_0_20px_rgba(255,0,85,0.3)] transition-all duration-300"
                            >
                                Ascolta Musica
                            </a>
                        </div>
                    </div>

                    {/* Profile Image */}
                    <div
                        class="flex justify-center md:justify-end items-center relative animate-float order-first md:order-last mb-8 md:mb-0"
                    >
                        <div
                            class="relative w-48 h-48 md:w-64 md:h-64 lg:w-80 lg:h-80 xl:w-96 xl:h-96"
                        >
                            {/* Glow Effect */}
                            <div
                                class="absolute inset-0 bg-gradient-to-tr from-primary/30 to-secondary/30 rounded-[2rem] blur-3xl transform rotate-6"
                            >
                            </div>

                            {/* Image Container */}
                            <div
                                class="absolute inset-0 bg-black/40 backdrop-blur-sm rounded-[2rem] border border-white/10 overflow-hidden shadow-2xl ring-1 ring-white/20 transform -rotate-3 transition-transform hover:rotate-0 duration-500"
                            >
                                <img
                                    src="/images/profile.webp"
                                    alt="Tommaso Scalici"
                                    class="w-full h-full object-cover opacity-90 hover:opacity-100 transition-opacity duration-500 hover:scale-105 transform"
                                />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Scroll Indicator -->
        <div class="pb-10 mt-16 flex justify-center animate-bounce shrink-0">
            <svg
                class="w-6 h-6 text-gray-500"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
            </svg>
        </div>
    </section>

    <!-- Projects Section -->
    <section id="projects" class="py-32 px-6 bg-black/50">
        <div class="max-w-7xl mx-auto">
            <div class="flex items-end justify-between mb-16">
                <div>
                    <h2 class="text-4xl md:text-5xl font-bold font-mono mb-4">
                        <span class="text-primary">01.</span> Lavori Selezionati
                    </h2>
                    <p class="text-gray-400">
                        Ingegnerizzazione di soluzioni robuste per problemi
                        complessi.
                    </p>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {
                    projects.map((project) => (
                        <ProjectCard client:visible project={project} />
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Music Section -->
    <section id="music" class="py-32 px-6 relative overflow-hidden">
        <!-- Background Gradient -->
        <div
            class="absolute inset-0 bg-gradient-to-b from-transparent via-secondary/5 to-transparent pointer-events-none"
        >
        </div>

        <div class="max-w-7xl mx-auto relative z-10">
            <div class="flex items-end justify-between mb-16">
                <div>
                    <h2 class="text-4xl md:text-5xl font-bold font-mono mb-4">
                        <span class="text-secondary">02.</span> Architetture Sonore
                    </h2>
                    <p class="text-gray-400">
                        Esplorando i confini tra ritmo e atmosfera.
                    </p>
                </div>
            </div>

            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
                {
                    musicReleases.map((release) => (
                        <MusicReleaseCard
                            client:visible
                            release={release}
                            t={t}
                        />
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Playlists Section -->
    <section id="playlists" class="py-32 px-6 bg-black/50">
        <div class="max-w-7xl mx-auto">
            <div class="flex items-end justify-between mb-16">
                <div>
                    <h2 class="text-4xl md:text-5xl font-bold font-mono mb-4">
                        <span class="text-secondary">03.</span> Playlist Curate
                    </h2>
                    <p class="text-gray-400">
                        Colonne sonore per coding e deep work.
                    </p>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {
                    playlists.map((playlist) => (
                        <PlaylistCard
                            client:visible
                            playlist={playlist}
                            t={t}
                        />
                    ))
                }
            </div>
        </div>
    </section>
</Layout>
