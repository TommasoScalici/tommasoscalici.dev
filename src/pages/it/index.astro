---
import Layout from "../../layouts/Layout.astro";
import HeroSection from "../../components/sections/HeroSection.astro";
import ProjectsSection from "../../components/sections/ProjectsSection.astro";
import MusicSection from "../../components/sections/MusicSection.astro";
import PlaylistsSection from "../../components/sections/PlaylistsSection.astro";
import { bioData } from "../../data/bio";

const lang = "it";
const bio = bioData[lang];
---

<Layout
    title="Tommaso Scalici | Software Engineer & Musicista"
    description={bio.description}
    lang={lang}
>
    <HeroSection lang={lang} />
    <ProjectsSection lang={lang} />
    <MusicSection lang={lang} />
    <PlaylistsSection lang={lang} />
</Layout>
